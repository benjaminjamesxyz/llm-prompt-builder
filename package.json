{
  "name": "llm-prompt-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy:prod": "bun run build && bunx wrangler pages deploy dist --project-name=llm-prompt-builder --branch=production",
    "deploy:staging": "bun run build && bunx wrangler pages deploy dist --project-name=llm-prompt-builder --branch=staging"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "js-yaml": "^4.1.0",
    "preact": "^10.20.0",
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/prismjs": "^1.26.5",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.3.1",
    "jsdom": "^24.0.0"
  }
}
